@model TodoList

<div class="card card-outline-primary m-1 p-1 shadow padd big-marg-top">
    <div class="bg-faded p-1">
        <h4>
            @Model?.Title
        </h4>
        <a asp-controller="TodoLists" asp-action="ConfirmDelete" asp-route-listId="@Model?.Id"
           class="btn btn-danger btn-sm float-right marg">
            Delete list
        </a>
        <form id="@Model?.Id" asp-controller="TodoLists" asp-action="Hide" asp-route-listId="@Model?.Id" method="post">
            <button type="submit"
                    class="btn btn-warning btn-yellow btn-sm float-right marg">
                Hide list
            </button>
        </form>
        <form id="@Model?.Id" asp-controller="TodoLists" asp-action="Update" asp-route-listId="@Model?.Id" method="get">
            <button type="submit"
                    class="btn btn-warning btn-sm float-right marg">
                Change title
            </button>
        </form>
        <form id="@Model?.Id" asp-controller="TodoLists" asp-action="Copy" asp-route-listId="@Model?.Id" method="post">
            <button type="submit"
                    class="btn btn-warning btn-orange btn-sm float-right marg">
                Copy list
            </button>
        </form>
        <a asp-controller="TodoLists" asp-action="Todos" asp-route-listId="@Model?.Id" method="get"
           class="btn btn-success btn-sm float-right marg">
            Show todos
        </a>
    </div>
</div>